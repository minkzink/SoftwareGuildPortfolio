@model IEnumerable<EmployeeManagement.Models.ViewModels.EmployeeListViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/content/materialize/css/materialize.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Exo:900" rel="stylesheet">
    <link href="~/content/StyleSheet.css" rel="stylesheet" />
    <title>List</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col s12">
                <h1>Employees</h1>
                <a href="@Url.Action("Add","Employees")" class="waves-effect waves-light btn">Add An Employee<i class="material-icons left">library_add</i></a>
            </div>
            <div class="row">
                <div class="col s12">
                    <table class="highlight">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Department</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody style="background: rgba(250, 250, 250, 0.6) !important;">
                            @foreach (var employee in Model)
                            {
                                <tr>
                                    <td>@employee.Name</td>
                                    <td>@employee.Phone</td>
                                    <td>@employee.Department</td>
                                    <td><a href="@Url.Action("Edit","Employees", new { id=employee.EmployeeID})" class="waves-effect waves-light btn">Edit<i class="material-icons right">mode_edit</i></a></td>
                                    <td>
                                        @using (Html.BeginForm("Delete", "Employees", new { id= employee.EmployeeID }, FormMethod.Post))
                                        {
                                            <button class="waves-effect red lighten-2 btn" onclick="return confirm('Are You Sure You Want To Delete @employee.Name?');"><i class="material-icons right">delete</i>Delete</button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/materialize/materialize.min.js"></script>
</body>
</html>
